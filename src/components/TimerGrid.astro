        endDate: "2026-02-02T18:00:00Z",
    },
    {
        id: "TM-CHARLIE-03",
        name: "Project Charlie",
        startDate: "2026-01-29T00:00:00Z",
        endDate: "2026-02-04T12:00:00Z",
    },
    {
        id: "TM-DELTA-04",
        name: "Project Delta",
        startDate: "2026-01-29T12:00:00Z",
        endDate: "2026-02-03T12:00:00Z",
    },
    {
        id: "TM-ECHO-05",
