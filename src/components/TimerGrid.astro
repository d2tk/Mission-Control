    },
    {
        id: "TM-FOXTROT-06",
        name: "Project Foxtrot",
        startDate: "2026-01-29T12:00:00Z",
        endDate: "2026-02-06T12:00:00Z",
    },
    {
        id: "TM-GOLF-07",
        name: "Project Golf",
        startDate: "2026-01-29T12:00:00Z",
        endDate: "2026-02-07T12:00:00Z",
    },
    {
        id: "TM-HOTEL-08",
        name: "Project Hotel",
        startDate: "2026-01-29T12:00:00Z",
        endDate: "2026-02-08T12:00:00Z",
    },
];

// Pre-calculate timestamps to pass to client
const timersWithTimestamps = timers.map((t) => ({
    ...t,
    startTs: new Date(t.startDate).getTime(),
    endTs: new Date(t.endDate).getTime(),
}));
---

<div class="timer-section">
    <div class="timer-grid">
        {
            timersWithTimestamps.map((timer) => (
                <div
                    class="timer-card card hover-card"
                    id={`timer-${timer.id}`}
                    data-start={timer.startTs}
                    data-end={timer.endTs}
                >
                    <div class="timer-header">
                        <span class="timer-id">{timer.id}</span>
                        <h4 class="timer-name">{timer.name}</h4>
                    </div>

                    <div class="timer-content">
                        <div class="time-display">
                            <span class="label">Elapsed / Total</span>
                            <span class="value" id={`elapsed-${timer.id}`}>
                                00:00:00:00
                            </span>
                        </div>

                        <div class="progress-container">
                            <div class="progress-bar">
                                <div
                                    class="progress-fill"
                                    id={`progress-${timer.id}`}
                                />
                            </div>
                            <div class="progress-labels">
                                <span id={`percent-${timer.id}`}>0%</span>
                                <span
                                    class="target-label"
                                    id={`target-${timer.id}`}
                                >
                                    Target:{" "}
                                    {new Date(
                                        timer.endDate,
                                    ).toLocaleDateString()}
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="timer-footer">
                        <button
                            class="timer-btn start-btn"
                            data-timer-id={timer.id}
                        >
                            Reset Start
                        </button>
                        <span
                            class="status-indicator"
                            id={`status-${timer.id}`}
                        >
                            Status: --
                        </span>
                    </div>
                </div>
            ))
        }
    </div>
</div>

<style>
    .timer-section {
        width: 100%;
        margin-top: 1rem;
    }

    .timer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.25rem;
    }

    .timer-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
        background: var(--bg-secondary);
        border: 1px solid var(--border-primary);
        border-radius: 16px;
        position: relative;
        overflow: hidden;
    }

    .timer-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--accent-primary);
        opacity: 0.5;
    }

    .timer-header {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .timer-id {
        font-size: 0.65rem;
        font-weight: 800;
        color: var(--accent-primary);
        text-transform: uppercase;
        letter-spacing: 0.15em;
    }

    .timer-name {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 700;
    }

    .timer-content {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .time-display {
        display: flex;
        flex-direction: column;
    }

    .time-display .label {
        font-size: 0.7rem;
        color: var(--text-tertiary);
        text-transform: uppercase;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .time-display .value {
        font-family: "JetBrains Mono", "Courier New", monospace;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--text-primary);
        letter-spacing: -0.02em;
    }

    .progress-container {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }

    .progress-bar {
        height: 10px;
        background: var(--bg-tertiary);
        border-radius: 6px;
        overflow: hidden;
        border: 1px solid var(--border-secondary);
    }

    .progress-fill {
        height: 100%;
        width: 0%;
        background: linear-gradient(90deg, var(--accent-primary), #818cf8);
        transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 0 15px rgba(79, 70, 229, 0.2);
    }

    .progress-labels {
        display: flex;
        justify-content: space-between;
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-tertiary);
    }

    .timer-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 0.5rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-secondary);
    }

    .timer-btn {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 700;
        background: var(--bg-tertiary);
        border: 1px solid var(--border-primary);
        color: var(--text-primary);
        cursor: pointer;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .timer-btn:hover {
        background: var(--accent-primary);
        color: white;
        border-color: var(--accent-primary);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
    }

    .status-indicator {
        font-size: 0.65rem;
        font-weight: 700;
        color: var(--text-tertiary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
</style>

<script is:inline>
    (function () {
        function formatDuration(ms) {
            const isNegative = ms < 0;
            const absoluteMs = Math.abs(ms);
            const days = Math.floor(absoluteMs / (24 * 60 * 60 * 1000));
            const hours = Math.floor(
                (absoluteMs % (24 * 60 * 60 * 1000)) / (60 * 60 * 1000),
            );
            const mins = Math.floor(
                (absoluteMs % (60 * 60 * 1000)) / (60 * 1000),
            );
            const secs = Math.floor((absoluteMs % (60 * 1000)) / 1000);
            const sign = isNegative ? "-" : "";
            return `${sign}${String(days).padStart(2, "0")}d:${String(hours).padStart(2, "0")}h:${String(mins).padStart(2, "0")}m:${String(secs).padStart(2, "0")}s`;
        }

        function updateTimers() {
            const now = Date.now();
            const timerCards = document.querySelectorAll(".timer-card");

            timerCards.forEach((card) => {
                const id = card.id.replace("timer-", "");

                // Use stored start if exists, otherwise use the default data-start
                let startTs = parseInt(
                    localStorage.getItem(`timer_start_${id}`),
                );
                if (!startTs) {
                    startTs = parseInt(card.getAttribute("data-start"));
                }

                const endTs = parseInt(card.getAttribute("data-end"));

                const totalDuration = endTs - startTs;
                const elapsed = now - startTs;
                const remaining = endTs - now;

                // Progress: Clamp between 0 and 100
                let progress = 0;
                if (totalDuration > 0) {
                    progress = Math.max(
                        0,
                        Math.min(100, (elapsed / totalDuration) * 100),
                    );
                }

                // Update UI
                const displayEl = document.getElementById(`elapsed-${id}`);
                const fillEl = document.getElementById(`progress-${id}`);
                const percentEl = document.getElementById(`percent-${id}`);
                const statusEl = document.getElementById(`status-${id}`);

                if (displayEl) {
                    if (remaining > 0) {
                        displayEl.textContent = formatDuration(elapsed);
                    } else {
                        displayEl.textContent = "COMPLETED";
                        displayEl.style.color = "var(--accent-success)";
                    }
                }

                if (fillEl) fillEl.style.width = `${progress.toFixed(2)}%`;
                if (percentEl)
                    percentEl.textContent = `${progress.toFixed(1)}%`;

                if (statusEl) {
                    if (now < startTs) {
                        statusEl.textContent = "Status: Pending";
                        statusEl.style.color = "var(--text-tertiary)";
                    } else if (now > endTs) {
                        statusEl.textContent = "Status: Finished";
                        statusEl.style.color = "var(--accent-success)";
                    } else {
                        statusEl.textContent = "Status: Running";
                        statusEl.style.color = "var(--accent-primary)";
                    }
                }
            });
        }

        // Initialize buttons
        document.querySelectorAll(".start-btn").forEach((btn) => {
            btn.addEventListener("click", (e) => {
                const id = e.target.getAttribute("data-timer-id");
                const now = Date.now();
                localStorage.setItem(`timer_start_${id}`, now.toString());
                updateTimers();
            });
        });

        // Tick every second
        setInterval(updateTimers, 1000);
        updateTimers();
    })();
</script>
