    <style>
      /* Layout & Container */
      body {
        background-color: var(--bg-primary);
        color: var(--text-primary);
        font-family: "Inter", sans-serif;
      }

      .dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1.5rem 2rem 1.5rem;
      }

      .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-top: 1.5rem;
      }

      @media (min-width: 1024px) {
        .dashboard-grid {
          grid-template-columns: 1fr 340px; /* Main content + Sidebar width */
          gap: 2.5rem;
        }
      }

      .main-column {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
      }

      .sidebar-column {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      /* Card Styling */
      .card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-primary);
        border-radius: 12px;
        padding: 1.25rem;
        transition: all 0.2s ease;
      }

      .hover-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
        border-color: var(--border-secondary);
      }

      /* Typography */
      h1,
      h2,
      h3 {
        margin: 0;
      }

      .section-title {
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      /* Utility */
      .flex-between {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .header-controls {
        display: flex;
        gap: 0.75rem;
        align-items: center;
      }

      .btn {
        cursor: pointer;
        font-family: inherit;
        border: none;
        outline: none;
      }

      /* Status Badges */
      .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.6rem;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 500;
      }

      .status-success {
        background: rgba(var(--accent-success-rgb), 0.1);
        color: var(--accent-success);
        border: 1px solid rgba(var(--accent-success-rgb), 0.2);
      }
      .status-warning {
        background: rgba(var(--accent-warning-rgb), 0.1);
        color: var(--accent-warning);
        border: 1px solid rgba(var(--accent-warning-rgb), 0.2);
      }
      .status-error {
        background: rgba(var(--accent-error-rgb), 0.1);
        color: var(--accent-error);
        border: 1px solid rgba(var(--accent-error-rgb), 0.2);
      }
      .status-neutral {
        background: var(--bg-tertiary);
        color: var(--text-tertiary);
        border: 1px solid var(--border-secondary);
      }

      /* Animations */
      @keyframes pulse {
        0% {
          box-shadow: 0 0 0 0 rgba(var(--accent-success-rgb), 0.4);
        }
        70% {
          box-shadow: 0 0 0 6px rgba(var(--accent-success-rgb), 0);
        }
        100% {
          box-shadow: 0 0 0 0 rgba(var(--accent-success-rgb), 0);
        }
      }
      .pulse-dot {
        animation: pulse 2s infinite;
      }
    </style>

